# Autonomous AI Agent Environment Variables

# General Configuration
ENVIRONMENT=development  # Options: development, production
DEBUG=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_EXPIRATION_SECONDS=604800  # 7 days

# Container Configuration
# Set to 'true' to enable Docker container isolation for agent execution
USE_CONTAINERS=false
CONTAINER_MEMORY_LIMIT=512m
CONTAINER_CPU_QUOTA=50000  # 50% of CPU

# API Configuration
API_HOST=0.0.0.0
API_PORT=8098

# CORS Configuration (for production)
# Comma-separated list of allowed origins, only used in production
ALLOWED_ORIGINS=https://autonomous-ai-agent.example.com

# Agent Configuration
MAX_AGENT_INSTANCES=5
AGENT_TIMEOUT_SECONDS=60

# Task Configuration
MAX_SUBTASKS=10
MAX_TASK_EXECUTION_TIME=300  # 5 minutes

# Logging Configuration
LOG_LEVEL=INFO
